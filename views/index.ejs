<!doctype html>
<html>
  <head>
    <title>Exo Kadata</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
      integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
      crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
      integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
      crossorigin=""></script>
  </head>
  <body>
    <form action="/" method="post">
      <input type="radio" name="city" value="paris"> Paris<br>
      <input type="radio" name="city" value="athis"> Athis de l'orne<br>
      <input type="submit">
    </form>
    <div id="map"></div>
    <script>
      var positionL = <%-JSON.stringify(position)%>
      var textL = <%-JSON.stringify(text)%>
      var map = L.map('map').setView(positionL, 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);

      L.marker(positionL).addTo(map)
        .bindPopup(textL)
        .openPopup();
    </script>

    </body>
</html>
